{
  "name": "vscode-wally",
  "displayName": "vscode-wally",
  "description": "Provides a code-lens style install button for managing Wally dependencies",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:toml",
    "onFileSystem:file"
  ],
  "publisher": "cosinewaves",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "wally.install",
        "title": "Wally Install"
      }
    ],
    "codeLensProviders": [
      {
        "language": "toml",
        "pattern": "**/wally.toml"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosinewaves/vscode-wally.git"
  }
}
